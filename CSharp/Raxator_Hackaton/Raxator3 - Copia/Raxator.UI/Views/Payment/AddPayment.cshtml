@{
    ViewBag.ViewName = "Raxator - Adicionar Conta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("AddPayment", "Payment", FormMethod.Post))
{
    <div data-role="fieldcontain">
        <label for="description-c">Descrição:</label>
        <input type="text" name="description" id="description-c" value="" />
    </div>
    
    <div data-role="fieldcontain">
    <fieldset class="ui-grid-a">
      <div class="ui-block-a" style="padding-right:15px;">
          <label for="quantity-c">Quantidade:</label>
          <input type="number" name="quantity" id="quantity-c" value="" />               
      </div>
      <div class="ui-block-b" >
          <label for="value-c">Valor:</label>
          <input type="number" name="value" id="value-c" value="" />
      </div>
    </fieldset>
        </div>
    
    <button type="submit" data-theme="a" name="submit" class="ui-btn-hidden" aria-disabled="false">Adicionar</button>
}

@if (ViewBag.ViewCount != null && ViewBag.ViewCount)
{
    <div data-role="fieldcontain" style="margin-top: 25px;">
        <ul data-role="listview" data-split-icon="gear" data-split-theme="d">
            <li data-role="list-divider">Conta</li>
            <li>
                <a href="#">
                    <h3>Item 1</h3>
                    <p>Qtd:10</p>
                    <p style="float:right;display:inline-block">R$ 100,00</p>
                    <p style="display:inline-block">R$ 10,00</p>
                </a>
                <a href="@Url.Action("AddPayment", "Payment")" data-rel="dialog" data-transition="slideup"></a>
            </li>
            <li>
                <a href="#">
                    <h3>Item 2</h3>
                    <p>Qtd:5</p>
                    <p style="float:right;display:inline-block">R$ 10,00</p>
                    <p style="display:inline-block">R$ 5,00</p>
                </a>
                <a href="/Home/Index" data-rel="dialog" data-transition="slideup"></a>
            </li>
            <li>
                <a href="@Url.Action("Pay", "Payment")">
                    <h3 style="display:inline-block">Total:</h3>
                    <h3 style="float:right;display:inline-block;margin-right:20px">R$ 110,00</h3>
                </a>
            </li>
        </ul>
    </div>
}