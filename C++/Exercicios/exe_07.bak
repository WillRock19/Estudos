	#include<stdio.h>
	main (){
	float a,b;
	int c;
	printf("Digite um primeiro numero: ");
	scanf("%f",&a);
	printf("Digite um segundo numero: ");
	scanf("%f",&b);
	printf("Escolha uma das 4 operaçoes basicas da matematica: ");
	printf(" 1-para  Divisao");
	printf(" 2-para multiplicaçao");
	printf(" 3-para Soma");
	printf(" 4-para Subtraçao:  ");
	scanf("%i",&c);
	printf("Total: ");
	if(c==1){
	printf("%f", a/b);
	}
	if(c==2){
	printf("%f", a*b);
	}
	if(c==3){
	printf("%f", a+b);
	}
	if(c==4){
	printf("%f", a-b);
	}
	}





